@page "/";
@inherits ClientDetailsBase;
@rendermode InteractiveServer
<PageTitle>Home</PageTitle>

<button class="btn btn-outline-success" @onclick="()=>OnAddClick()">Add</button>&nbsp;
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Contact No.</th>
        <th>Address Description</th>
        <th></th>
    </tr>
    @foreach (var clientDetail in this.ClientDetails)
    {
        <tr>
            <td>@clientDetail.FirstName</td>
            <td>@clientDetail.LastName</td>
            <td>@clientDetail.Gender</td>
            <td>@clientDetail.ContactNumber</td>
            <td>@clientDetail.AddressDescription</td>
            <td>
                <button class="btn btn-outline-primary" @onclick="()=>OnEditClick(clientDetail)">Edit</button>
                &nbsp;
                <button class="btn btn-outline-danger" @onclick="()=>OnDeleteClick(clientDetail)">Delete</button>
            </td>
        </tr>
    }
</table>


